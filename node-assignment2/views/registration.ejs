<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Notes App</title>
    <link rel="stylesheet" href="/static/style.css">
</head>
<body>
<%- include('./components/header')%>
<secton class="registration">
    <h1 class="section__title">Registration</h1>
    <form method="POST" class="form registration__form" action="/registration">
        <div class="form__container">
            <label for="user-email" class="form__label">Email</label>
            <input id="user-email" name="email" placeholder="john@gmail.com" class="form__input">
        </div>
        <div class="form__container">
            <label for="user-name" class="form__label">Name</label>
            <input id="user-name" name="name" placeholder="John Doe" class="form__input">
        </div>
        <div class="form__container">
            <label for="user-password" class="form__label">Password</label>
            <input id="user-password" name="password" class="form__input">
        </div>
        <div class="form__container">
            <button type="submit" class="form__submit-button form__registration-button">Register</button>
        </div>
    </form>
</secton>
<%- include('./components/footer')%>
</body>
</html>